<main>
    <form class="product-form" action="/add-book" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" maxlength="50">
        </div>
        <div class="form-control">
            <label for="title">Author Name</label>
            <input type="text" name="author_name" id="author_name">
        </div>
        <div class="form-control">
            <label for="title">Row Letter</label>
            <input type="text" name="row_letter" id="row_letter" maxlength="5">
        </div>
        <div class="form-control">
            <label for="title">Code</label>
            <input type="number" name="code" id="code">
        </div>
        <div class="form-control">
            <label for="title">ISLE</label>
            <input type="number" name="isle" id="isle">
        </div>

        <button class="btn" type="submit">Add Book</button>
    </form>
</main>